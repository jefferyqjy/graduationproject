<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.sys.plugin.msgboard.Message" table="t_message">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="native"/>
        </id>
        <property access="field" column="t_title" length="128" name="title"/>
        <property access="field" column="t_content" length="2048" name="content"/>
        <property access="field" column="t_createTime" length="64" name="datetime"/>
        <property access="field" column="t_username" length="40" name="username"/>
    </class>
</hibernate-mapping>
